@model IEnumerable<MarcadorDeJogos.Models.ConfigGeneral>
@{
    ViewData["Title"] = "Pesquisar";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="texto">Texto</label>
                    <input type="text" class="form-control" name="texto" value=@ViewData["texto"] />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Pesquisar</button>
        </form>
    </div>
</nav>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Configuração General</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.FlgUtilizaTotal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FlgJogoSequencial)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VlrFula)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VlrFulaMao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VlrSequencia)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VlrSequenciaMao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VlrQuadra)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VlrQuadraMao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VlrGeneral)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VlrGeneralMao)
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FlgUtilizaTotal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FlgJogoSequencial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VlrFula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VlrFulaMao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VlrSequencia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VlrSequenciaMao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VlrQuadra)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VlrQuadraMao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VlrGeneral)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VlrGeneralMao)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Ver configuração</a>
                    </td>
                </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>