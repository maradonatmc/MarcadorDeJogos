@model IEnumerable<MarcadorDeJogos.Models.Jogadores>
@{
    ViewData["Title"] = "Jogadores";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="Visualizar">
            <fieldset>
                <legend>Pesquisar</legend>
                <div class="form-group">
                    <label for="texto" class="col-lg-10 control-label">Nome do Jogador</label>
                    <div class="col-lg-10">
                        <input type="text" name="texto" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Pesquisar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

