@model IEnumerable<MarcadorDeJogos.Models.Jogos>
@{
    ViewData["Title"] = "Pesquisar";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="texto">Texto</label>
                    <input type="text" class="form-control" name="texto" value=@ViewData["texto"] />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Pesquisar</button>
        </form>
    </div>
</nav>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Jogos</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.NomeJogo)
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NomeJogo)
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id">Ver jogo</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>